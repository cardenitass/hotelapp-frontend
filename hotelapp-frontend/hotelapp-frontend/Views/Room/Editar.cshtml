@model hotelapp_frontend.Models.Habitacion
@{
    ViewData["Title"] = "Editar Habitacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">

<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Editar Habitacion</h2>
                    <div class="bt-option">
                        <a asp-area="" asp-controller="Room" asp-action="Index">Habitaciones</a>
                        <span>Editar Habitacion</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <form asp-action="Editar" method="post">
                    <div class="ri-text">
                        <div class="form-group">
                            <label asp-for="IDTipoHabitacion">Tipo de Habitación:</label>
                            <select asp-for="IDTipoHabitacion" class="form-control" required>
                                <option value="">Seleccione un Tipo de Habitación...</option>
                                @foreach (var tipoHabitacion in ViewBag.TipoHabitacion)
                                {
                                    <option value="@tipoHabitacion.IDTipoHabitacion">@tipoHabitacion.NombreTipoHabitacion</option>
                                }
                            </select>
                            <span asp-validation-for="IDTipoHabitacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroPiso">Número de Piso:</label>
                            <input asp-for="NumeroPiso" class="form-control" required>
                            <span asp-validation-for="NumeroPiso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Disponible" class="form-check-label">Disponible:</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="Disponible" type="checkbox" class="form-check-input">
                            </div>
                        </div>
                        <button type="submit" class="modify-btn">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
