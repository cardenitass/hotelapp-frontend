@model hotelapp_frontend.Models.Habitacion
@{
    ViewData["Title"] = "Detalle de Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">

<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Detalle de Habitación</h2>
                    <div class="bt-option">
                        <a asp-area="" asp-controller="Room" asp-action="Index">Habitaciones</a>
                        <span>Detalle de Habitación</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="ri-text">
                    <div class="form-group">
                        <label>Tipo de Habitación:</label>
                        <input type="text" class="form-control" value="@Model.IDTipoHabitacion" readonly>
                    </div>
                    <div class="form-group">
                        <label>Número de Piso:</label>
                        <input type="text" class="form-control" value="@Model.NumeroPiso" readonly>
                    </div>
                    <div class="form-group">
                        <label>Disponible:</label>
                        <input type="text" class="form-control" value="@(Model.Disponible ? "Sí" : "No")" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
