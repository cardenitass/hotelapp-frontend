@model IEnumerable<hotelapp_frontend.Models.Habitacion>


@{
    ViewData["Title"] = "Rooms Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @foreach (var habitacion in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="@habitacion.Path_Img" alt="">
                        <div class="ri-text">
                            <h4>@habitacion.NombreHabitacion</h4>
                            <h3>@habitacion.CostoNoche<span> /Colones</span></h3>
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Capacitidad:</td>
                                        <td>Max persion @habitacion.CantPersonas</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Disponible:</td>
                                        <td>@(habitacion.Disponible ? "Sí" : "No")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


