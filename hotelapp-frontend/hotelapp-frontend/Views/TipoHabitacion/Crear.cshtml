@model IEnumerable<hotelapp_frontend.Models.TipoHabitacion>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">

<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Crear</h2>  
                    <div class="bt-option">
                        <a asp-area="" asp-controller="TipoHabitacion" asp-action="Index">Tipo Habitación</a>
                        <span>Crear Nuevo Tipo de Habitación</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <form asp-action="Crear" method="post"> 
                    <div class="ri-text">
                        <div class="form-group">
                            <label for="NombreTipoHabitacion">Nombre:</label>
                            <input type="text" id="NombreTipoHabitacion" name="NombreTipoHabitacion" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="Path_Img">URL de Imagen:</label>
                            <input type="text" id="Path_Img" name="Path_Img" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="CantPersonas">Capacidad:</label>
                            <input type="number" id="CantPersonas" name="CantPersonas" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="CantCamas">Número de Camas:</label>
                            <input type="number" id="CantCamas" name="CantCamas" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="Cocina" class="question-label">¿Posee cocina?</label>
                            <div class="form-check form-check-inline">
                                <input type="checkbox" id="Cocina" name="Cocina" class="form-check-input">
                            </div>
                        </div>
                         <div class="form-group">
                            <label for="CostoNoche">Costo de la Noche:</label>
                            <input type="number" id="CostoNoche" name="CostoNoche" class="form-control" required>
                        </div>
                        <button type="submit" class="create-btn">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
