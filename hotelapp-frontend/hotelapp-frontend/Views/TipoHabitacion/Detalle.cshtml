@model hotelapp_frontend.Models.TipoHabitacion

@{
    ViewData["Title"] = "Room Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <div class="bt-option">
                        <a asp-area="" asp-controller="TipoHabitacion" asp-action="Index">Tipo Habitación</a>
                        <span>Detalle</span>
                    </div>
                </div>
            </div>
        </div>
        <h2>@Model.NombreTipoHabitacion</h2>

        <div class="row">
            <div class="col-lg-6">
                <div class="room-details-img">
                    <img src="@Model.Path_Img" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="room-details-content">
                    <h3>@Model.CostoNoche <span> /Colones</span></h3>
                    <table>
                        <tbody>
                            <tr>
                                <td class="r-o">Capacidad:</td>
                                <td>Max personas @Model.CantPersonas</td>
                            </tr>
                            <tr>
                                <td class="r-o">Camas:</td>
                                <td>@Model.CantCamas Beds</td>
                            </tr>
                            <tr>
                                <td class="r-o">Cocina:</td>
                                <td>@(Model.Cocina ? "Yes" : "No")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
