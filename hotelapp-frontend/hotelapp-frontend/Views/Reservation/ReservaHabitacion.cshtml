@model hotelapp_frontend.Models.Habitacion

@{
    ViewData["Title"] = "Room Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="room-reservation-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="room-details-img">
                    <img src="@Model.Path_Img" alt="@Model.NombreHabitacion">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="room-reservation-content">
                    <h2>@Model.NombreHabitacion -</h2>
                    <h3>₡@Model.CostoNoche per night</h3>
                    <br />
                    <br />
                    <form asp-controller="Reservation" asp-action="Reservar" method="post">
                        <input type="hidden" name="IDHabitacion" value="@Model.IDHabitacion" />
                        <div class="form-group">
                            <label for="FechaInicio">Check-in Date:</label>
                            <input type="date" class="form-control" id="FechaInicio" name="FechaInicio" required />
                        </div>
                        <div class="form-group">
                            <label for="FechaFin">Check-out Date:</label>
                            <input type="date" class="form-control" id="FechaFin" name="FechaFin" required />
                        </div>
                        <div class="form-group">
                            <label for="CantidadNoches">Number of Nights:</label>
                            <input type="number" class="form-control" id="CantidadNoches" name="CantidadNoches" required />
                        </div>
                        <div class="form-group">
                            <label for="CostoTotal">Total Cost:</label>
                            <input type="text" class="form-control" id="CostoTotal" name="CostoTotal" readonly />
                        </div>
                        <h4>Payment Information:</h4>
                        <div class="form-group">
                            <label for="NumeroTarjeta">Card Number:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-credit-card"></i></span>
                                </div>
                                <input type="text" class="form-control" id="NumeroTarjeta" name="NumeroTarjeta" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="NombreTarjeta">Cardholder's Name:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" id="NombreTarjeta" name="NombreTarjeta" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CVV">CVV:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                </div>
                                <input type="password" class="form-control" id="CVV" name="CVV" required />
                            </div>
                        </div>
                        <button class="btn btn-primary" onclick="redirectToConfirmacionReserva(@Model.IDHabitacion)">Reserve</button>

                        <script>
                            function redirectToConfirmacionReserva(idHabitacion) {
                                var url = '@Url.Action("ConfirmacionReserva", "Reservation")?id=' + idHabitacion;
                                window.location.href = url;
                            }
                        </script>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

